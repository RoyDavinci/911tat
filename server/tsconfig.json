{
	"compilerOptions": {
		"target": "es2016",
		"lib": ["es6"],
		"module": "commonjs",
		"allowJs": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx"
	},
	"include": ["src", ".eslintrc.js", "source-path/**/*.json", "client"],
	"exclude": ["node_modules", "dist"]
}
